{% assign post = include.post %}
{% assign author = site.authors | where: "name", post.author | first %}

<header class="post-header">

    <figure class="author-avatar">
        <a href="{{ include.href | default: post.url | relative_url }}">
            <img src="{{ author.avatar | relative_url }}" alt="{{ author.display_name }}"
                 title="{{ author.display_name }}"
                 loading="lazy"
            >
        </a>
    </figure>

    {% if include.no_title != true %}
        <h3 class="post-title"><a href="{{ site.baseurl }}{{ post.url }}">{{ post.title }}</a></h3>
    {% endif %}
    <div class="post-meta">
        <div class="post-date">
            <time class="timeago" datetime="{{ post.date | date_to_xmlschema }}"
                  title="{{ post.date | date: '%B %d, %Y %H:%M' }}">
                {{ post.date | date: '%B %d, %Y' }}
            </time>
        </div>

        <div class="post-author">
            {% if author %}
                <a href="{{ author.url | relative_url }}">{{ author.display_name }}</a>
            {% endif %}
        </div>
    </div>
    <div class="post-tags-categories">
        {% for category in post.categories %}
            <span class="post-category" data-color="{{ category }}">{{ category }}</span>
        {% endfor %}

        {% for tag in post.tags %}
            <span class="post-tag">{{ tag }}</span>
        {% endfor %}
    </div>

</header>