
<div class="code-tabs">
    <div class="tab-buttons">
        {% if include.html %}<button onclick="showTab('html')">HTML</button>{% endif %}
        {% if include.css %}<button onclick="showTab('css')">CSS</button>{% endif %}
        {% if include.js %}<button onclick="showTab('js')">JS</button>{% endif %}
    </div>

    {% if include.html %}
        <pre id="tab-html"><code class="language-html">{{ include.html | escape }}</code></pre>
    {% endif %}

    {% if include.css %}
        <pre id="tab-css" style="display:none;"><code class="language-css">{{ include.css | escape }}</code></pre>
    {% endif %}

    {% if include.js %}
        <pre id="tab-js" style="display:none;"><code class="language-js">{{ include.js | escape }}</code></pre>
    {% endif %}

<script>
    function showTab(id) {
        document.querySelectorAll('.code-tabs pre').forEach(el => el.style.display = 'none');
        document.getElementById('tab-' + id).style.display = 'block';
    }
</script>

<iframe id="demo-frame" sandbox="allow-scripts"></iframe>
<script type="module">
    const html = `{{ page.html | escape }}`;
    const css = `<style>{{ page.css | escape }}</style>`;
    const js = `<script>{{ page.js | escape }}<\/script>`;
    const doc = html + css + js;
    document.getElementById('demo-frame').srcdoc = doc;
</script>
</div>
